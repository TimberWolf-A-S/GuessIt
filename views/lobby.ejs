  <body>
    <div class="join-container">
      <header class="join-header">
        <h1><i class="fas"></i> Lobby</h1>
      </header>
      <main class="join-main">
        <form>
          <div class="form-control">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" placeholder="Enter username..." required />
          </div>
          <div class="form-control">
            <label for="room">Room</label>
            <select name="room" id="room">
              <% room_list.forEach(function(room){ %>
              <option value="<%= room.name %>"><%= room.name %></option>
              <% }) %>
            </select>
          </div>
          <button type="submit" class="btn" formaction="/game">Join Game</button>
        </form>
      </main>
    </div>
    <footer>
      <nav>
        <ul>
          <li id="footerlist"><a href="">About Us</a></li>
          <li id="footerlist"><a href="">Contact Us</a></li>
          <li id="footerlist"><a href="">Privacy</a></li>
        </ul>
      </nav>
    </footer>

